{
  "name": "@epfl-si/react-appauth",
  "version": "0.3.0",
  "description": "React bindings for @openid/appauth",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "set -e -x; rm -rf dist ; NODE_ENV=production babel src/* --out-dir dist --extensions '.ts,.tsx' --source-maps; NODE_ENV=production tsc --project tsconfig.json",
    "prepare": "yarn build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "files": [
    "dist/**"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/epfl-si/react-appauth.git"
  },
  "babel": {
    "presets": [
      "@babel/preset-typescript",
      [
        "@babel/env",
        {
          "targets": {
            "edge": "17",
            "firefox": "60",
            "chrome": "67",
            "safari": "11.1"
          },
          "useBuiltIns": "usage",
          "corejs": "3.6.5"
        }
      ],
      "@babel/preset-react"
    ]
  },
  "keywords": [
    "OpenID-Connect",
    "OAuth2",
    "React",
    "@openid/appauth"
  ],
  "author": "EPFL ISAS-FSD <isas-fsd@groupes.epfl.ch>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/epfl-si/react-appauth/issues"
  },
  "homepage": "https://github.com/epfl-si/react-appauth#readme",
  "devDependencies": {
    "@babel/cli": "^7.19.3",
    "@babel/core": "^7.19.3",
    "@babel/preset-env": "^7.19.4",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@openid/appauth": "^1.3.1",
    "core-js": "^3.25.5",
    "use-async-effect": "^2.2.7"
  }
}
